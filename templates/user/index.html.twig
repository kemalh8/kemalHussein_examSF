{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Image</th>
                <th>EndDate</th>
                <th>Sector</th>
                <th>ContractType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {%  if app.user and app.user.hasRole('ROLE_RH') %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.endDate ? user.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ user.sector }}</td>
                <td>{{ user.contractType }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                    <a href="{{ path('app_user_delete', {'id': user.id}) }}">Delete</a>

                </td>
            </tr>
            {%  endif %}
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
