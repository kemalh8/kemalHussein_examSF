{% extends 'base.html.twig' %}

{% block title %}Hello EmployeeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="">
   <h1 class=" text-center mb-4">List of Employees</h1>

    <table>
         <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Image</th>
                <th>EndDate</th>
                <th>Sector</th>
                <th>ContractType</th>
                <th>Actions</th>
            </tr>
        </thead>
          <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.image }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.roles ? employee.roles|json_encode : '' }}</td>
                <td>{{ employee.password }}</td>
                <td>{{ employee.firstName }}</td>
                <td>{{ employee.lastName }}</td>
                <td>{{ employee.endDate ? employee.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ employee.sector }}</td>
                <td>{{ employee.contractType }}</td>
                <td> <a class =" text-warning" href="{{path("app_user_edit",{'id':app.user.id})}}">Edit</a> <a class =" text-danger" href="{{path("app_user_delete",{'id':app.user.id})}}">Delete</a></td>

            </tr>
        {% else %}
            <tr>
                <td colspan="11">No employees found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}



